  "scripts": {
    "_format:setup:prettier": "prettier 'src/**' 'test/**' '!**/*.sh'",
    "format:check": "pnpm run format:check:lint && pnpm run format:check:prettier",
    "format:check:lint": "pnpm eslint .",
    "format:check:prettier": "pnpm run _format:setup:prettier -c",
    "format:fix:lint": "pnpm run format:check:lint --fix",
    "format:fix:prettier": "pnpm run _format:setup:prettier -w",
    "_test:setup": "APFM_LOG_LEVEL=silent NODE_ENV=test vitest --coverage",
    "test:unit": "pnpm _test:setup run",
    "test:unit:watch": "pnpm _test:setup watch"
